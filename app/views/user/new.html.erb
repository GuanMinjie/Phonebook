<h1>注册用户</h1>
<br> </br>
<% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
          <li> <% msg%></li>
          <%end%>
    </ul>

<%end%>
<%= form_tag :action => 'create' do %>
    <p> <label for = "user_name" >用户名:</label> </p>
    <p> <%= text_field :user,:name %></p>
    <br>
    <p> <label for = "user_password" >密码:</label> </p>
    <p> <%= text_field :user,:password %></p>
    <p> <label for = "user_password_confirmation" >确认密码:</label> </p>
    <p> <%= text_field :user,:password_confirmation %></p>
    <%= submit_tag "创建" %>
<% end%>